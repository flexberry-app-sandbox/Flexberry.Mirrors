<h3 class="ui header">{{t "forms.i-i-s-mirrors-mirror-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.serialNumber
      class=(if (v-get validationObject "serialNumber" "isInvalid") "error")
      label=(t "forms.i-i-s-mirrors-mirror-e.serialNumber-caption")
      data-test-i-i-s-mirrors-mirror-e-serialNumber=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "serialNumber" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-mirrors-mirror-e.mirrorType-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.mirrorType
      class=(if (v-get validationObject "mirrorType" "isInvalid") "error")
      displayAttributeName="name"
      autocomplete=true
      relationName="mirrorType"
      projection="MirrorTypeL"
      title=(t "forms.i-i-s-mirrors-mirror-e.mirrorType-caption")
      readonly=readonly
      componentName="mirrorTypeLookup"
      class=(if (v-get validationObject "mirrorType" "isInvalid") "error")
      data-test-i-i-s-mirrors-mirror-e-mirrorType=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "mirrorType" "message")}}
  </div>

  <div class="field">
    <label>{{t "forms.i-i-s-mirrors-mirror-e.owners-caption"}}</label>
    {{flexberry-groupedit
      componentName="ownersGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.owners
      content=model.owners
      readonly=readonly
      orderable=false
      class=(if (v-get validationObject "owners" "isInvalid") "error")
      data-test-i-i-s-mirrors-mirror-e-owners=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "owners" "message")}}
  </div>
</form>